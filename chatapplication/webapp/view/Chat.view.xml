<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.basf.yardmanagement.chatapp.chatapplication.controller.Chat">    
    <Page title="{i18n>chatTitle}">
        <content>
            <List id="chatList" items="{chat>/}" growing="true" growingScrollToLoad="true">
                <items>
                    <CustomListItem>                       
                            <VBox>
                                <Text text="{chat>text}" class="messageText" wrapping="true" />
                                <Text text=" { path: 'chat>date' , formatter: '.formatter.formatDate'}" class="dateText" />
                            </VBox>          
                            <customData>
                                <core:CustomData key="flag" value="{chat>flag}" writeToDom="true" />
                            </customData>                                
                    </CustomListItem>
                </items>
            </List>
        </content>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Input 
                    id="messageInput" 
                    placeholder="Type your message..." 
                    width="100%" 
                    submit="onSendPress" /> 
                <Button 
                    text="Send" 
                    icon="sap-icon://paper-plane" 
                    press="onSendPress" /> 
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
