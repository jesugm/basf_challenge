<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.basf.yardmanagement.chatapp.chatapplication.controller.Chat">    
    <Page title="Name">
        <content>
            <List id="chatList" items="{chat>/}" growing="true" growingScrollToLoad="true" >
                <items>
                    <CustomListItem class="listItem" >
                                <HBox justifyContent="Center" alignItems="Center" class="dateBox">
                                    <Text text=" { path: 'chat>date' , formatter: '.formatter.formatDate'}" class="dateText" />
                                </HBox>                                
                                <HBox class="horizontalBox">
                                    <Image class="profilePic" src="images/miguel.jpg" visible="{= ${chat>flag} === 'R' }"></Image>
                                    <Image 
                                        src="images/grey-check.png" 
                                        class="statusIcon" 
                                        visible="{= ${chat>flag} === 'S' }"
                                        />
                                    <Image 
                                        src="images/blue-check.png" 
                                        class="statusIcon" 
                                        visible="false" />
                                    <VBox>
                                        <Text text="{chat>text}" class="messageText" wrapping="true" />
                                        
                                        <customData>
                                            <core:CustomData key="flag" value="{chat>flag}" writeToDom="true" />
                                        </customData> 
                                    </VBox>
                                    <Image class="profilePic" src="images/yalan.jpg" visible="{= ${chat>flag} === 'S' }"></Image>
                                    <customData>
                                        <core:CustomData key="horizontalFlag" value="{chat>flag}" writeToDom="true"/>
                                    </customData>
                                </HBox>                                              
                    </CustomListItem>
                </items>
            </List>
        </content>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Input 
                    id="messageInput" 
                    placeholder="Type your message..." 
                    width="100%" 
                    submit="onSendPress" /> 
                <Button 
                    text="Send" 
                    icon="sap-icon://paper-plane" 
                    press="onSendPress" /> 
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
